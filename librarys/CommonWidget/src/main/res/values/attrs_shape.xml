<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeLayout">
        <!-- 圆角半径 -->
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension|reference" />
        <attr name="topRightRadius" format="dimension|reference" />
        <attr name="bottomLeftRadius" format="dimension|reference" />
        <attr name="bottomRightRadius" format="dimension|reference" />

        <!-- 背景颜色 -->
        <attr name="solid" format="reference|color" />

        <!--边框 -->
        <attr name="strokeWidth" format="reference|dimension"/>
        <attr name="strokeColor" format="reference|color"/>
        <attr name="strokeDashWidth" format="reference|dimension"/>
        <attr name="strokeDashGap" format="reference|dimension"/>

        <!-- padding -->
        <attr name="padding" format="reference|dimension"/>
        <attr name="paddingLeft" format="reference|dimension"/>
        <attr name="paddingRight" format="reference|dimension"/>
        <attr name="paddingTop" format="reference|dimension"/>
        <attr name="paddingBottom" format="reference|dimension"/>

    </declare-styleable>
</resources>