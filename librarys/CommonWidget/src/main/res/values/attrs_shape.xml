<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeLayout">

        <!-- shape标签属性 -->
        <attr name="shape" format="integer" />
        <attr name="dither" format="boolean" />
        <attr name="innerRadius" format="dimension|reference" />
        <attr name="mInnerRadiusRatio" format="float" />
        <attr name="thickness" format="dimension|reference" />
        <attr name="thicknessRatio" format="float" />
        <attr name="useLevel" format="boolean" />
<!--    <attr name="tintMode" format="integer" />
        <attr name="tint" format="color|reference" />
        <attr name="opticalInsetLeft" format="dimension|reference" />
         <attr name="opticalInsetTop" format="dimension|reference" />
         <attr name="opticalInsetRight" format="dimension|reference" />
         <attr name="opticalInsetBottom" format="dimension|reference" />-->

        <!--宽高 -->
        <attr name="width" format="dimension|reference" />
        <attr name="height" format="dimension|reference" />

        <!-- 圆角半径 -->
        <attr name="radius" format="dimension" />
        <attr name="topLeftRadius" format="dimension|reference" />
        <attr name="topRightRadius" format="dimension|reference" />
        <attr name="bottomLeftRadius" format="dimension|reference" />
        <attr name="bottomRightRadius" format="dimension|reference" />

        <!-- 背景颜色 -->
        <attr name="solid" format="reference|color" />

        <!--边框 -->
        <attr name="strokeWidth" format="reference|dimension" />
        <attr name="strokeColor" format="reference|color" />
        <attr name="strokeDashWidth" format="reference|dimension" />
        <attr name="strokeDashGap" format="reference|dimension" />

        <!-- padding -->
        <attr name="padding" format="reference|dimension" />
        <attr name="paddingLeft" format="reference|dimension" />
        <attr name="paddingRight" format="reference|dimension" />
        <attr name="paddingTop" format="reference|dimension" />
        <attr name="paddingBottom" format="reference|dimension" />

        <!-- gradient-->
        <attr name="gradientAngle" format="float" />
        <attr name="gradientStartColor" format="reference|color" />
        <attr name="gradientCenterColor" format="reference|color" />
        <attr name="gradientEndColor" format="reference|color" />
        <attr name="gradientCenterX" format="float|fraction" />
        <attr name="gradientCenterY" format="float|fraction" />
        <attr name="gradientType" format="integer" />
        <attr name="gradientRadius" format="reference|dimension|float" />
        <attr name="gradientUseLevel" format="boolean" />

    </declare-styleable>
</resources>