<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/testFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TestFrag" />

    <Button
        android:id="@+id/showDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showDialog" />

    <Button
        android:id="@+id/http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http请求" />

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:translationY="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CDDC39"
        app:cardCornerRadius="20dp"
        app:contentPadding="5dp">

    </androidx.cardview.widget.CardView>

    <common.widget.shape.ShapeEditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:hint="例如：你好"
        android:imeActionId="111"
        android:imeActionLabel="确定"
        android:imeOptions="actionNext"
        android:singleLine="true"
        app:radius="@dimen/album_dp_10"
        app:solid="@color/tab_text_selected"
        android:layout_margin="10dp"
        android:textColor="#2A2A2A"
        android:textColorHint="#9A9A9A"
        android:textSize="15sp"
        android:visibility="visible" />

    <common.widget.shape.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:gradientStartColor="#ffff"
        app:gradientEndColor="#E60909"
        app:radius="25dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />

    </common.widget.shape.ShapeLinearLayout>

    <common.widget.shape.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        app:radius="25dp"
        app:solid="#DA1313">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />
    </common.widget.shape.ShapeLinearLayout>

    <common.widget.shape.ShapeFrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:radius="25dp"
        app:strokeWidth="1dp"
        app:strokeColor="#7DD615"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />
    </common.widget.shape.ShapeFrameLayout>

   <common.widget.shape.ShapeTextView
       android:layout_width="100dp"
       android:layout_height="50dp"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="10dp"
       android:text="圆角TextView"
       android:gravity="center"
       app:radius="25dp"
       app:solid="#DA1313" />

    <common.widget.shape.ShapeButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="圆角Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:radius="25dp"
        app:solid="#DA1313" />
</LinearLayout>