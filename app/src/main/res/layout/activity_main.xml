<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/testFrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TestFrag" />

    <Button
        android:id="@+id/showDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="showDialog" />

    <Button
        android:id="@+id/http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http请求" />

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:translationY="2dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CDDC39"
        app:cardCornerRadius="20dp"
        app:contentPadding="5dp">

    </androidx.cardview.widget.CardView>


    <common.widget.shape.ShapeLinearLayout
        android:id="@+id/shapelayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:sp_radius="15dp"
        app:sp_shape="rectangle"
        android:padding="20dp"
        android:background="#F60E0E"
        app:sp_solid="#F60E0E">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ceshifffffffffffffffffffffffffff"
            android:background="#228F31" />

    </common.widget.shape.ShapeLinearLayout>
</LinearLayout>